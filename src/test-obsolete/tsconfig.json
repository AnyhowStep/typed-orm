{
    "compilerOptions": {
        "outDir": "./dist/src/main",
        "sourceMap": true,


        "experimentalDecorators": true,

        "allowJs": false,

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,

        "newLine": "lf",

        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noErrorTruncation": true,

        "strict": true,

        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "jsx": "react",
        "jsxFactory": "h",

        "baseUrl": "./src",
        "paths": {
            "*": [
                "./types/*"
            ]
        }
    },
    "compileOnSave": false,

    "include": [
        "../../src/main/**/*",
        "../../src/test/**/*"
    ]
}
