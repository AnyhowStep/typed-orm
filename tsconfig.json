{
    "compilerOptions": {
        "outDir": "./dist/src/main",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,


        "experimentalDecorators": true,

        "allowJs": false,

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,

        "newLine": "lf",

        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noErrorTruncation": true,

        "strict": true,

        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "jsx": "react",
        "jsxFactory": "h",
        "rootDir":"./src/main"
    },
    "compileOnSave": false,

    "include": [
        "./src/main/**/*"
    ]
}
